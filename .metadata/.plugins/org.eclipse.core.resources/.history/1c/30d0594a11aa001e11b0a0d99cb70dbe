package sec02.exam02;

public class IncreaseDecreaseOperatorExample {

	public static void main(String[] args) {
		int x = 10;
		int y = 10;
		int z;
		
		System.out.println("---------------------");
		x++; // x=10
		++x; // x=12
		System.out.println("x=" + x);
		
		System.out.println("---------------------");
		y--; // x=10
		++y; // x=12
		System.out.println("y=" + y);
		
		System.out.println("---------------------");
		z= x++; // x=10
		System.out.println("z=" + z);
		System.out.println("x=" + x);
		
		System.out.println("---------------------");
		z= ++x; // x=10
		System.out.println("z=" + z);
		System.out.println("x=" + x);
		
		System.out.println("---------------------");
		z= ++x + y++; // x=10
		System.out.println("z=" + z);
		System.out.println("x=" + x);
		System.out.println("y=" + y);
		
	}

}
